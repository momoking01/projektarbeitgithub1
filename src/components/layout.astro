    <!-- âœ… Cookie-Zustimmungsbanner -->
    <div class="cookie-banner" id="cookie-banner">
      <p>Diese Website verwendet Cookies, um die Benutzerfreundlichkeit zu verbessern.</p>
      <button id="accept-cookies">Akzeptieren</button>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const cookieBanner = document.getElementById("cookie-banner");
        const acceptCookiesBtn = document.getElementById("accept-cookies");
    
        if (!cookieBanner || !acceptCookiesBtn) {
          console.warn("Cookie-Banner oder Accept-Button nicht gefunden!");
          return;
        }
    
        if (!localStorage.getItem("cookiesAccepted")) {
          cookieBanner.style.display = "block";
        }
    
        acceptCookiesBtn.addEventListener("click", function () {
          localStorage.setItem("cookiesAccepted", "true");
          cookieBanner.style.display = "none";
        });
      });
    </script>
    

