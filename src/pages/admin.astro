---
import Layout from "../components/layout.astro";
---

<Layout>
  <div class="admin-container">
    <h1>Admin Panel</h1>
    <div class="admin-item admin-product-name" style="display: none;"></div>

    <p>Only admins can access this page.</p>

    <div id="admin-controls" style="display: none;">
      <h2>Add Product</h2>
      <div class="admin-input-group">
        <input id="product-name" placeholder="Product Name" type="text">
        <button class="admin-button" id="addProductButton">Add</button>
      </div>

      <h2>Manage Products</h2>
      <ul class="admin-product-list" id="product-list"></ul>
    </div>
  </div>
</Layout>

<script is:inline>
  function checkAdminAccess() {
    let role = localStorage.getItem("userRole");
    if (role !== "admin") {
      alert("Access denied. Admins only.");
      window.location.href = "/projektarbeitgithub1/";
    } else {
      document.getElementById("admin-controls").style.display = "block";
      loadProducts();
    }
  }

  function addProduct() {
    let productName = document.getElementById("product-name").value.trim();
    if (!productName) {
      alert("Please enter a product name.");
      return;
    }

    let products = JSON.parse(localStorage.getItem("products")) || [];

    if (products.includes(productName)) {
      alert("Product already exists!");
      return;
    }

    products.push(productName);
    localStorage.setItem("products", JSON.stringify(products));
    loadProducts();
  }

  function loadProducts() {
    let products = JSON.parse(localStorage.getItem("products")) || [];
    let productList = document.getElementById("product-list");
    productList.innerHTML = "";

    products.forEach((product, index) => {
      let li = document.createElement("li");
      li.classList.add("admin-item");

      let span = document.createElement("span");
      span.textContent = product;
      span.classList.add("admin-product-name");

      let removeBtn = document.createElement("button");
      removeBtn.textContent = "Remove";
      removeBtn.classList.add("admin-button");
      removeBtn.onclick = function () {
        removeProduct(index);
      };

      li.appendChild(span);
      li.appendChild(removeBtn);
      productList.appendChild(li);
    });
  }

  function removeProduct(index) {
    let products = JSON.parse(localStorage.getItem("products")) || [];
    products.splice(index, 1);
    localStorage.setItem("products", JSON.stringify(products));
    loadProducts();
  }

  window.onload = function () {
    checkAdminAccess();
    document.getElementById("addProductButton").addEventListener("click", addProduct);
  };
</script>

<style>
  .admin-container {
    background: rgba(0 0 0 / 60%);
    color: #F5E6C1;
    text-align: center;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0 0 0 / 60%);
    max-width: 600px;
    margin: auto;
    margin-top: 50px;
  }

  .admin-input-group {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
  }

  .admin-product-list {
    list-style: none;
    padding: 0;
    margin-top: 20px;
  }

  /* ✅ Admin-Produkt */
  .admin-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(255 255 255 / 15%);
    padding: 15px;
    border-radius: 10px;
    margin-bottom: 12px;
    box-shadow: 0 2px 5px rgba(0 0 0 / 40%);
    width: 100%;
  }

  /* ✅ Admin-Produkt-Name jetzt identisch mit dem normalen Menü */
  .admin-product-name {
    font-size: 20px;
    font-weight: bold;
    color: white;
    flex-grow: 1;
    text-align: left;
    padding-left: 12px;
  }

  /* ✅ Admin-Buttons jetzt in Gelb */
  .admin-button {
    background: #FFD700;
    color: black;
    padding: 12px 18px;
    border-radius: 8px;
    font-weight: bold;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }

  .admin-button:hover {
    background: #FFA500;
  }
</style>
