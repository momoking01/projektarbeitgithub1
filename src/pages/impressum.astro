<style>
  /* ✅ Seitenhintergrund */
  body {
    background: #1c1c1c;
    color: #f5f5f5;
    font-family: Arial, sans-serif;
    min-height: 100vh;
    overflow-y: auto;
  }

  /* ✅ Hauptcontainer */
  .impressum-container {
    max-width: 800px;
    margin: 50px auto;
    padding: 30px 20px 75px;
    background: rgba(255 255 255 / 10%);
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0 0 0 / 50%);
    text-align: left;
  }

  /* ✅ Überschriften */
  h1 {
    font-size: 32px;
    font-weight: bold;
    color: #FFD700;
    text-align: center;
    text-shadow: 2px 2px 6px rgba(0 0 0 / 80%);
  }

  h2 {
    font-size: 22px;
    color: #FFA500;
    margin-top: 20px;
  }

  /* ✅ Standard-Text */
  p {
    font-size: 16px;
    line-height: 1.6;
  }

  /* ✅ E-Mail-Link */
  .impressum-link {
    color: #4ea8de;
    font-weight: bold;
    text-decoration: none;
    transition: color 0.3s ease-in-out;
  }

  .impressum-link:hover {
    color: #FFD700;
  }

  /* ✅ Letztes Update */
  .last-updated {
    margin-top: 30px;
    font-size: 14px;
    color: #bbb;
    text-align: center;
  }
</style>
